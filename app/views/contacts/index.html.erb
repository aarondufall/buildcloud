
<h3>Contacts</h3>
<br />

<% if @contacts.none? %>
	<h3>There are no contacts, lets add some</h3>
<% else %>
	<table class="table table-striped table-condensed">
  		<thead>
    		<tr>
    			<th>First Name</th>
    			<th>Last Name </th>
    			<th>Company</th>
    			<th>Email</th>
    			<th><%= link_to [:new, current_team, :contact], :class => 'btn btn-primary btn-mini pull-right' do %>
					<i class="icon-plus"></i> New Contact 
					<% end %></th>
     		</tr>
  		</thead>
  		<tbody>
    		<% @contacts.each do |contact| %>
      		<tr>
        		<td><%= contact.first_name %></td>
        		<td><%= contact.last_name %></td>
        		<td><%= contact.company %></td>
        		<td><%= contact.email %></td>
        		<td>
        			<%= link_to '#', :class => 'pull-right' do %>
        				<i class="icon-pencil"></i> Details
        		    <% end %>
        		</td>
      		</tr>
    		<% end %>
	</table>
<% end %>
