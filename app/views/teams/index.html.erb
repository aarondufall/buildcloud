<h3>Team</h3><br />
<% @teams.each do |team| %>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
    	<th><%= team.name.pluralize %> team</th>
	    <th>
	    	<%= link_to users_path, :class => 'btn btn-mini pull-right' do %>
	    	<i class="icon-plus icon-white"></i> Add
	    	<% end %>
	    </th>	
    </tr>
  </thead>
  <tbody>
    <% team.users.each do |member| %>
      <tr>
        <td>
          <%= link_to member.profile.name, '#' %></td>
        <td>
        	<% unless member.account == current_user.account %>
        		<%= link_to remove_from_team_user_path(member), confirm: 'Are you sure?', 
        					 	 :method => 'put', 
        					 	 :class => 'pull-right'  do %>
        		<i class="icon-trash icon-white"></i> Remove
        		<% end %>
        	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

