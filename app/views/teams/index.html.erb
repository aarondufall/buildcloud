<h1>Team Managment</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
    	<th>Team Members</th>
	    <th>
	    	<%= link_to users_path, :class => 'btn btn-mini pull-right' do %>
	    	<i class="icon-plus icon-white"></i> Add
	    	<% end %>
	    </th>	
    </tr>
  </thead>
  <tbody>
    <% @own_team.users.each do |member| %>
      <tr>
        <td>
          <%= link_to member.email, '#' %></td>
        <td>
        	<% unless member.owned_team == current_user.owned_team %>
        		<%= link_to remove_from_team_user_path(member), confirm: 'Are you sure?', 
        					 	 :method => 'put', 
        					 	 :class => 'btn btn-mini btn-danger pull-right'  do %>
        		<i class="icon-minus icon-white"></i> Remove
        		<% end %>
        	<% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


