
 <%= render 'error_messages' %>
 <div class="row">
  <div class="span4 offset4">
  <h3> New Task </h3><br />
  <%= form_for [@project, @tasklist, @task] do |f| %>
  <div class="well">
  <%= f.text_field :name, :placeholder => 'Enter task' %>
  </div>
  <h3>Options</h3><br />
  <div class="well"
  <%= f.label 'scheduled (optional)' %>
  <div><%= f.date_select :scheduled, {:prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}}, :class => 'date-field' %></div>
  <div><%= f.time_select :scheduled,  { :minute_step => 15,:ampm => true, :prompt => {:hour => 'hour', :minute => 'Minutes'}}, :class => 'date-field' %></div>

  <%= f.label 'assigned_to (optional)' %>
  <div><%= select :user_id, :assigned_to , @project.team.users.collect{|user| [user.profile.name, user.id]} %></div>
</div>

  <%= f.submit "Create Task", :class => 'btn btn-primary' %>
  <%= link_to 'Cancel', @tasklist.project, :class => 'btn'%>

  <% end %>

 </div>
</div>
