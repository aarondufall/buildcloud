<table class="table table-striped table-condensed">
  <thead>
    <tr>
    	<th>Projects</th>
    	<th>
    		<%= link_to new_project_path, :class => 'btn btn-mini btn-primary pull-right' do %>
        <i class="icon-plus icon-white"></i> New Project
        <% end %>
    	</th>
    </tr>
  </thead>
  <tbody>
    <% unless @projects.empty? %>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project_path(project) %></td>
        
          <td>
           
        	 <%= link_to edit_project_path(project), :class => 'pull-right', :method => 'get' do %>
             <i class="icon-pencil icon-white"></i> edit
            <% end %>
          </td>

        </tr>
      <% end %>
    <% else %>

      <tr>
        <td>There are currently no projects.</td>
        <td></td>
      </tr>
  
    <% end %>
  </tbody>
</table>