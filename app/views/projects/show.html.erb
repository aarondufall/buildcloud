<h3><%= @project.name %></h3>


<div class="project-nav">
<ul class="nav nav-tabs ">
  <li><%= link_to 'Tasks', project_tasklists_path(@project) %></li>
  <li><%= link_to 'Waiting', '#' %></li>
  <li><%= link_to 'Orders', '#' %></li>
  <li><%= link_to 'R.F.I.', '#' %></li>
  <li><%= link_to 'Files', '#' %></li>
  <li><%= link_to 'Dates', '#' %></li>
</ul>
</div>

<ul class="navlist">
<li>Task Lists</li>

<li><%= link_to 'Add task list', new_project_tasklist_path(@project), :class => 'btn btn-mini'%></li>
</ul>

<% @tasklists.each do |tasklist| %>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
    	<th>
        <%= tasklist.name %>
        <div class='pull-right'>
        <% if tasklist.start_date? %>
              Start:<span class="date"> <%= l tasklist.start_date %> </span>
              Duration:
              <span class="date"> 
                <%= distance_of_time_in_words(tasklist.start_date, tasklist.end_date) %>
              </span>
        <% else %>
          Due date:<span class="date"> <%= tasklist.end_date %></span>
        <% end %>
          <%= link_to [:edit, @project, tasklist], :class => 'btn btn-mini',
                                                   :method => 'get' do %>
            <i class="icon-pencil icon-white"></i> Edit
          <% end %>
       </div>   
      </th>
     </tr>
  </thead>
  <tbody>
        <% tasklist.tasks.each do |task| %>
        <tr>
          <td>task.name</td>
        </tr>
        <% end %>
  </tbody>
</table>
<%= link_to 'Add task', [:new, @project, tasklist, :task], :class => 'btn btn-mini' %>

                                              
<% end %>