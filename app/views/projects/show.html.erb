<h3><%= @project.name %></h3>


<div class="project-nav">
<ul class="nav nav-tabs ">
  <li><%= link_to 'Tasks', project_tasklists_path(@project) %></li>
  <li><%= link_to 'Waiting', '#' %></li>
  <li><%= link_to 'Orders', '#' %></li>
  <li><%= link_to 'R.F.I.', '#' %></li>
  <li><%= link_to 'Files', '#' %></li>
  <li><%= link_to 'Dates', '#' %></li>
</ul>
</div>

<ul class="navlist">
<li>Task Lists</li>  

<li><%= link_to 'Add task list', new_project_tasklist_path(@project), :class => 'btn btn-mini'%></li>
</ul>

<% @tasklists.each do |tasklist| %>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
    	<th>
        <%= tasklist.name %> <%= link_to edit_project_tasklist_path(@project, tasklist), :class => 'btn btn-mini', :method => 'get' do %>
             <i class="icon-pencil icon-white"></i>
            <% end %>
            <%= link_to project_tasklist_path(@project,tasklist), method: :delete, :class => 'btn btn-mini btn-danger', confirm: "You sure?" do %> 
           <i class="icon-remove icon-white"></i>
           <% end %>
      </th>
    	<th>
    		Start Date: <div class="date"><%= tasklist.start_date%></div>   
    		Due Date: <div class="date"><%= tasklist.end_date%></div>
    	</th>
    
    		
    	
    </tr>
  </thead>
  <tbody>
        <tr>
          <td><input type="checkbox" name="task" value="task"> </td>
        
          <td>
        	this is a task
          </td>

        </tr>
  
    
  </tbody>
</table>
<% end %>