
<%= form.text_field :title, :placeholder => 'Enter short description of the issue...' %>
<h3>Description/Notes</h3><br />
<%= form.text_area :description, :placeholder => 'Enter full description or notes for the issue' %>

<% ["RFI", "Completion of works", "Rectification", "Out of Scope", "Snag Item"].each do |item| %>
  <%= form.radio_button :type, item %> <%= item %><br />
<% end %>
<br />

<div><%= form.select :assigned_to_id , @project.team.users.all.collect{|user| [user.profile.name, user.id]}, {:include_blank => 'Unassigned'} %></div>

