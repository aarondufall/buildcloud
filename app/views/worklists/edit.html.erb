<%= render 'error_messages' %>
<div class="row">
  <div class="span4 offset4">
    <h3>Edit List</h3><br/>
    <%= form_for [current_account, @worklist.project, @worklist] do |f| %>
    
      <%= render :partial => "form", :object => f %>
  
      <%= f.submit "Update", :class => 'btn btn-primary' %>
    
      <%= link_to [current_account, @worklist.project, @worklist] , method: :delete, :class => 'btn btn-danger', confirm: "You sure?" do %>
        <i class="icon-trash icon-white"></i> Delete
      <% end %>
      <%= link_to 'Cancel', [current_account, @worklist.project, @worklist], :class => 'btn'%>
    <% end %>
  </div>
</div>