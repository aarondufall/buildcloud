
<h3>
  <%= link_to @project.name, @project %>
  <i class="icon-arrow-right"></i> <%= link_to 'To-do Lists', [@project, :worklists] %>
  <i class="icon-arrow-right"></i> <%= @worklist.name %>
</h3>
<hr />


<ul class="nav nav-tabs">
  <%= navbar_entry active_todos? do %>
    <%= link_to 'Active', [@project, @worklist] %>
  <% end %>
  <%= navbar_entry completed_todos? do %>
    <%= link_to 'Completed', project_worklist_path(@project, @worklist, filter: "completed") %>
  <% end %>

  <li class="pull-right">
    <%= link_to [:edit, @project, @worklist], :method => 'get' do %>
      <i class="icon-pencil icon-white"></i> Edit List
    <% end %>
  </li>
</ul>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>
        <%= render :partial => 'worklists/list_header', :locals => { :worklist => @worklist, completed_todos: completed_todos?, active_todos: active_todos? } %>
      </th>
     </tr>
  </thead>
  <tbody>
    <% if !@worklist.todos.exists? %>
      <tr>
        <td>
          Let's get started and add some tasks to the list
        </td>
      </tr>
    <% elsif !@worklist.todos.incomplete.exists? %>
      <tr>
        <td>
          All todos have been completed, why not add some more?
        </td>
      </tr>
    <% else %>
      <% @todos.each do |todo| %>
        <tr>
          <td>
            <%= render :partial => 'todos/todo', :locals => { :worklist => @worklist,
                                                              :todo => todo,
                                                              :project => @project } %>
          </td>
        </tr>
      <% end %>
    <% end %>
    <tr>
      <td>
        <%= link_to [:new, @project, @worklist, :todo]  do%>
          <i class="icon-plus"></i> Add to-do
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<br />