<h1>Edit List</h1>
<div class="row">
<div class="span4 offset4">
  <%= form_for [@tasklist.project, @tasklist] do |f| %>

    <%= hidden_field_tag :from, params[:from] %>

    <div class='well'>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :start_date %>
      <div><%= f.date_select :start_date, {:prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}}, :class => 'date-field' %></div>

      <%= f.label :end_date %>
      <div><%= f.date_select :end_date, {:prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}}, :class => 'date-field' %></div>

    

    <%= f.submit "Update", :class => 'btn btn-primary' %>
    
    <%= link_to [@tasklist.project, @tasklist] , method: :delete, :class => 'btn btn-danger', confirm: "You sure?" do %>
            <i class="icon-trash icon-white"></i> Delete
      <% end %>
      <%= link_to 'Cancel', @tasklist.project, :class => 'btn'%>
  <% end %>
  </div>
</div>


</div>