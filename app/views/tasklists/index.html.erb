<h3><%= link_to @project.name, @project %></h3>

<hr />
<ul class="navlist">
<li>Task Lists</li>

<li><%= link_to 'Add task list', [:new, @project, :tasklist], :class => 'btn btn-mini'%></li>
</ul>

<% @tasklists.each do |tasklist| %>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
    	<th>
        
        <%= tasklist.name %>
        

        <div class='pull-right'>
          Start:<span class="date"> <%= l tasklist.start_date %> </span>
          Duration:<span class="date"> <%= distance_of_time_in_words(tasklist.start_date, tasklist.end_date) %></span>

          <%= link_to [:edit, @project, tasklist], :class => 'btn btn-mini', :method => 'get' do %>
             <i class="icon-pencil icon-white"></i>
        <% end %>
    	</th>
    </tr>
  </thead>
  <tbody>
        <tr>
          <td><input type="checkbox" name="task" value="task"> this is a task</td>
        </tr>


  </tbody>
</table>
<% end %>