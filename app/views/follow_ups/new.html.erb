<div class="row">
  <div class="span6 well offset3">
  	
  		
	<h3>Follow up: <%= link_to @issue.title, [@project, @issue], :class => 'todo-list' %>
              
		<span class="label label-important"><%= @issue.issue_type %></span></h3>
                                                                                                           
		<div class="notes">  
    		<% unless @issue.created_by.nil? %>
     		Created by <%= link_to @issue.created_by.profile.name, '#' %> <%= relative_date(@issue.created_at) %>
    	<% end %>
    	<% unless @issue.todo.nil? %>
      		for To-do <%= link_to @issue.todo.name, [@project, @issue.todo.todolist, @issue.todo] %>
    	<% end %>
	
	</div>
  </div>
</div>