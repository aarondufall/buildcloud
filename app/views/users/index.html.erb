<%= form_tag users_path, :class => 'form-search pull-right', :method => 'get' do %>	
    <%= text_field_tag :search, params[:search], :class => 'input-large search-query', :placeholder => 'Find User'%>
    <%= button_tag "Search", :name => nil, :class => 'btn' %>
<% end %>



<table class="table table-striped table-condensed">
  <thead>
    <tr>
    	<th>Users</th>
    	<th>
    		
    	</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.profile.name, '#' %></td>
        
        <td>

        	<% unless user_signed_in? && user == current_user %>
        		<%= link_to add_to_team_user_path(user), :class => 'btn btn-mini pull-right', :method => 'put' do %>
	    		   <i class="icon-plus icon-white"></i> Add
            <% end %>
        	<% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>


